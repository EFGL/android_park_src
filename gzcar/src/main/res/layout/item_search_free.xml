<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_free_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="18sp" />

        <include layout="@layout/linear_vertical" />

        <TextView
            android:id="@+id/item_free_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="17sp" />

        <include layout="@layout/linear_vertical" />

        <TextView
            android:id="@+id/item_free_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="17sp" />

        <include layout="@layout/linear_vertical" />

        <TextView
            android:id="@+id/item_free_intime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textSize="16sp" />

        <include layout="@layout/linear_vertical" />

        <TextView
            android:id="@+id/item_free_outtime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textSize="16sp" />

        <include layout="@layout/linear_vertical" />

        <TextView
            android:id="@+id/item_free_parkingtime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp" />

        <include layout="@layout/linear_vertical" />

        <TextView
            android:id="@+id/item_free_receivable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="17sp" />
        <include layout="@layout/linear_vertical" />

        <TextView
            android:id="@+id/item_free_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="17sp" />
    </LinearLayout>

    <include layout="@layout/linear_horizontal" />
</LinearLayout>