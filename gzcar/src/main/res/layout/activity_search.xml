<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:orientation="horizontal"
    android:paddingRight="10dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#e4e4e4"
        android:orientation="vertical"
        android:padding="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#fff">

            <RadioButton
                android:id="@+id/rb_search_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:button="@null"
                android:drawableLeft="@mipmap/ic_back"
                android:drawablePadding="5dp"
                android:text="返回"
                android:textColor="#f00"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text=""
                android:textColor="#f00"
                android:textSize="25sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_search_1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/tab_text_seletor"
                android:button="@null"
                android:gravity="center"
                android:text="车辆信息"
                android:textColor="@drawable/tab_text_color_seletor"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4" />

            <RadioButton
                android:id="@+id/rb_search_2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/tab_text_seletor"
                android:button="@null"
                android:gravity="center"
                android:text="通行记录"
                android:textColor="@drawable/tab_text_color_seletor"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4" />

            <RadioButton
                android:id="@+id/rb_search_3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/tab_text_seletor"
                android:button="@null"
                android:gravity="center"
                android:text="收费记录"
                android:textColor="@drawable/tab_text_color_seletor"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4" />
        </RadioGroup>


    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e4e4e4" />


    <FrameLayout
        android:id="@+id/fl_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.4" />
</LinearLayout>