<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="3dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/search_carinfo_carnum"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@mipmap/ic_text_bg"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/search_carinfo_cartype"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@mipmap/ic_text_bg"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/search_carinfo_carwei"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@mipmap/ic_text_bg"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/search_carinfo_person"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@mipmap/ic_text_bg"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/search_carinfo_phone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@mipmap/ic_text_bg"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/search_carinfo_address"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@mipmap/ic_text_bg"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/search_carinfo_starttime"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@mipmap/ic_text_bg"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/search_carinfo_endtime"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@mipmap/ic_text_bg"
        android:gravity="center"
        android:textSize="18sp" />
</LinearLayout>
